pipeline {
    options {
      timeout(time: 1, unit: 'HOURS') 
			}
  agent {
    docker {
      image 'yatu10/snowflake-sqitch_21nov'
      args "-u root -v /var/run/docker.sock:/var/run/docker.sock --entrypoint=''"
		   }
		}
  stages {
    stage('Moving .snowsql to workspace and replacing snowsql in /bin') {
        steps {
            sh '''
            # rm /bin/snowsql 
            # mv /var/snowsql /bin/
            # mv /var/.snowsql ./
	    whoami
            ''' 
        }
	  }
	  
    stage('Initialize Sqitch') {
    	steps{
    		sh '''
              sqitch init snowjenkinstest --engine snowflake 
	      cat sqitch.conf
	      cat sqitch.plan
              ''' 
    		}
	}
    stage('Deploy changes') {
      steps {
        withCredentials(bindings: [usernamePassword(credentialsId: 'snowflake_creds', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) 
        {
          sh '''
              sqitch deploy "db:snowflake://amrutdengre:NewStart123@VXA95806.us-east-1.snowflakecomputing.com/DEMO_DB?Driver=Snowflake"
              '''           
        }
      }
    }
    stage('Verify changes') {
      steps {
        withCredentials(bindings: [usernamePassword(credentialsId: 'snowflake_creds', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
          sh '''
              sqitch verify "db:snowflake://amrutdengre:NewStart123@VXA95806.us-east-1.snowflakecomputing.com/DEMO_DB?Driver=Snowflake"
              ''' 
        }
      }
    }
  }
	post {
    always {
      sh 'chmod -R 777 .'
    }
  }
  }
